<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
		<property name="connection.url">jdbc:mariadb://localhost/greenhouse</property>
		<property name="connection.username">root</property>
		<property name="connection.password">password</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/package_diagram_desktop_component/model/Ambiente.hbm.xml" />
		<mapping resource="ormmapping/package_diagram_desktop_component/model/Area_Coltivata.hbm.xml" />
		<mapping resource="ormmapping/package_diagram_desktop_component/model/Coltivazione.hbm.xml" />
		<mapping resource="ormmapping/package_diagram_desktop_component/model/Descrizione_Coltivazione.hbm.xml" />
		<mapping resource="ormmapping/package_diagram_desktop_component/model/Impiegato.hbm.xml" />
		<mapping resource="ormmapping/package_diagram_desktop_component/model/Sezione.hbm.xml" />
	</session-factory>
</hibernate-configuration>
